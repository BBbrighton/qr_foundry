{
  "doctype": "DocType",
  "name": "QR List",
  "module": "QR Foundry",
  "custom": 0,
  "istable": 0,
  "track_changes": 1,
  "editable_grid": 0,
  "allow_rename": 0,
  "autoname": "format: QR-{YYYY}-{#####}",
  "field_order": [
    "section_target",
    "qr_mode",
    "link_type",
    "target_doctype",
    "target_name",
    "action",
    "custom_route",
    "value_doctype",
    "value_name",
    "value_field",
    "manual_content",
    "label_text",
    "section_output",
    "encoded_url",
    "image",
    "file_url",
    "absolute_file_url",
    "qr_token",
    "status"
  ],
  "fields": [
    { "fieldname": "section_target", "fieldtype": "Section Break", "label": "Target" },
    { "fieldname": "qr_mode", "fieldtype": "Select", "label": "QR Mode", "options": "URL\nValue\nManual", "default": "URL", "in_list_view": 1 },
    { "fieldname": "link_type", "fieldtype": "Select", "label": "URL Link Type", "options": "Direct\nToken", "default": "Direct", "depends_on": "eval:doc.qr_mode=='URL'", "in_list_view": 1 },
    { "fieldname": "target_doctype", "fieldtype": "Link", "label": "Target DocType", "options": "DocType", "depends_on": "eval:doc.qr_mode=='URL'", "mandatory_depends_on": "eval:doc.qr_mode=='URL'", "in_list_view": 1 },
    { "fieldname": "target_name", "fieldtype": "Dynamic Link", "label": "Target Name", "options": "target_doctype", "depends_on": "eval:doc.qr_mode=='URL'", "mandatory_depends_on": "eval:doc.qr_mode=='URL'", "in_list_view": 1 },
    { "fieldname": "action", "fieldtype": "Select", "label": "Action", "options": "view\nedit\nprint\nreport\ncustom_url", "default": "view", "depends_on": "eval:doc.qr_mode=='URL'", "mandatory_depends_on": "eval:doc.qr_mode=='URL'" },
    { "fieldname": "custom_route", "fieldtype": "Data", "label": "Custom Route/URL (for custom_url/report)", "depends_on": "eval:doc.qr_mode=='URL' && (doc.action=='custom_url' || doc.action=='report')" },
    { "fieldname": "value_doctype", "fieldtype": "Link", "label": "Value DocType", "options": "DocType", "depends_on": "eval:doc.qr_mode=='Value'", "mandatory_depends_on": "eval:doc.qr_mode=='Value'" },
    { "fieldname": "value_name", "fieldtype": "Dynamic Link", "label": "Value Document", "options": "value_doctype", "depends_on": "eval:doc.qr_mode=='Value'", "mandatory_depends_on": "eval:doc.qr_mode=='Value'" },
    { "fieldname": "value_field", "fieldtype": "Select", "label": "Field to Encode", "options": "", "depends_on": "eval:doc.qr_mode=='Value'", "mandatory_depends_on": "eval:doc.qr_mode=='Value'" },
    { "fieldname": "manual_content", "fieldtype": "Small Text", "label": "Manual Content", "depends_on": "eval:doc.qr_mode=='Manual'", "mandatory_depends_on": "eval:doc.qr_mode=='Manual'" },
    { "fieldname": "label_text", "fieldtype": "Data", "label": "Label (optional)" },
    { "fieldname": "section_output", "fieldtype": "Section Break", "label": "Output" },
    { "fieldname": "encoded_url", "fieldtype": "Data", "label": "Encoded Content", "read_only": 1 },
    { "fieldname": "image", "fieldtype": "Attach Image", "label": "QR Image", "read_only": 1 },
    { "fieldname": "file_url", "fieldtype": "Data", "label": "File URL", "read_only": 1, "in_list_view": 1 },
    { "fieldname": "absolute_file_url", "fieldtype": "Data", "label": "Absolute File URL", "read_only": 1 },
    { "fieldname": "qr_token", "fieldtype": "Link", "label": "QR Token", "options": "QR Token", "read_only": 1, "in_list_view": 1 },
    { "fieldname": "status", "fieldtype": "Select", "label": "Status", "options": "Active\nDisabled", "default": "Active" }
  ],
  "permissions": [
    { "role": "System Manager", "read": 1, "write": 1, "create": 1, "delete": 1, "print": 1, "email": 1, "export": 1, "report": 1, "share": 1 },
    { "role": "QR Manager", "read": 1, "write": 1, "create": 1, "delete": 0, "print": 1 },
    { "role": "All", "read": 1 }
  ],
  "sort_field": "modified",
  "sort_order": "desc"
}
