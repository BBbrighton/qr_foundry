{
  "doctype": "DocType",
  "name": "QR Settings Rule",
  "module": "QR Foundry",
  "istable": 1,
  "custom": 0,
  "editable_grid": 1,
  "field_order": [
    "enabled",
    "target_doctype",
    "default_link_type",
    "default_action",
    "auto_generate_on_first_save"
  ],
  "fields": [
    { "fieldname": "enabled", "label": "Enabled", "fieldtype": "Check", "default": "1", "in_list_view": 1 },
    {
      "fieldname": "target_doctype",
      "label": "DocType",
      "fieldtype": "Link",
      "options": "DocType",
      "reqd": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "default_link_type",
      "label": "Link Type",
      "fieldtype": "Select",
      "options": "Direct\nToken",
      "default": "Direct",
      "in_list_view": 1
    },
    {
      "fieldname": "default_action",
      "label": "Default Action",
      "fieldtype": "Select",
      "options": "view\nprint\nedit",
      "default": "view",
      "in_list_view": 1
    },
    {
      "fieldname": "auto_generate_on_first_save",
      "label": "Auto-generate on First Save",
      "fieldtype": "Check",
      "default": "0",
      "description": "If enabled, generates once when the document is first saved."
    }
  ],
  "permissions": [
    { "role": "System Manager", "read": 1, "write": 1, "create": 1, "delete": 1 },
    { "role": "QR Manager",     "read": 1, "write": 1, "create": 1 }
  ]
}
